<% tag_title ||= "Tag Title" %>
<% channels ||= [] %>

<div class="tag_with_channels_block pl-3 pr-3 mt-1 mb-3">
    <%= link_to tag_path(Tag.find_by(title: tag_title)) do %>
        <h2>
            <%= tag_title %> <small>(<%= channels.count %>)</small>
        </h2>
    <% end %>
    
    <%= render partial: "youtube/channels", locals: { channels: channels } %>
</div>