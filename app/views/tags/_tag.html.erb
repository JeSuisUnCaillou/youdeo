<% tag_title ||= "Tag Title" %>
<% channels ||= [] %>

<h2>
    <%= tag_title %> (<%= channels.count %>)
</h2>

<div class="row">
    <% channels.each do |channel_uid| %>
        <div class="col-lg-3 col-md-4 mb-2 pl-1 pr-1">
            <%= channel_uid %>    
        </div>
    <% end %>    
</div>
